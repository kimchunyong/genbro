                                    th.has-background-white-ter 입고여부
                                    th.has-background-white-ter 비고
                            tbody
                                each value,key in data
                                    - console.log();
                                    tr
                                        td #{key+1}
                                        td #{value.cngccode}
                                        td #{value.cnciname1}
                                        td #{value.cnciname3}
                                        td #{value.spcompanyid}
                                        td #{value.cncmname2}
                                        td #{value.spid !== "" ? "입고" : "대기"}
                                        td #{value.cncomment}
        .modal-footer
            if __data.ismanagercnt === __data.cnt && __data.isheadcnt === __data.cnt
                -console.log();
                button.btn.btn-success(type='button' href=(API_ROOT+"/approval/recorddownload.php?date="+__date)) 출력
